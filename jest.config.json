{
  "collectCoverageFrom": [
    "<rootDir>/src/**/*.ts",
    "!<rootDir>/src/main/**",
    "!<rootDir>/src/**/index.ts"
  ],
  "coverageDirectory": "coverage",
  "coverageProvider": "babel",
  "moduleNameMapper": {
    "@/tests/(.+)": "<rootDir>/tests/$1",
    "@/(.+)": "<rootDir>/src/$1"
  },
  "roots": ["<rootDir>/tests"],
  "transform": {
    "\\.ts$": "ts-jest"
  },
  "clearMocks": true,
  "testMatch": ["**/*.spec.ts"]
}
